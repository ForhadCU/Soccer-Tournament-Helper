<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_back"
    tools:context=".TourActionsActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:id="@+id/cardID"
        android:layout_marginTop="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@color/app_back">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnAddTeamsId_1"
                android:textStyle="bold"
                android:text="+ Add Team"
                android:background="@drawable/update_btn_style"
                android:padding="2dp"
                android:textAllCaps="false"
                android:textColor="@color/lightWhite_text"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnShowPtsTableId"
                android:textStyle="bold"
                android:text="Points Table"
                android:background="@drawable/add_btn_style_2"
                android:padding="2dp"
                android:textAllCaps="false"
                android:layout_marginStart="53dp"
                android:textColor="#0091EA"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnScoreEntryId_1"
                android:textStyle="bold"
                android:text="Score Entry +"
                android:background="@drawable/add_btn_style"
                android:layout_marginStart="53dp"
                android:padding="2dp"
                android:textAllCaps="false"
                android:textColor="@color/lightWhite_text"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_below="@+id/cardID"
        android:text="Team List"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/darkWhite_text"
        android:typeface="serif"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="425dp"
        android:id="@+id/lvTeamListId"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:divider="@color/app_back"
        android:dividerHeight="10dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        />
